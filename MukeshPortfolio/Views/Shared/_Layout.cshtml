<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mukesh Thakur</title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/portfolio.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chatbot.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MukeshPortfolio.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom" style="background: rgba(10, 10, 10, 0.95); backdrop-filter: blur(10px); border-color: var(--border-color) !important;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="padding: 0.25rem 0;">
                    <img src="~/images/MukeshProfileImage.jpg"
                         alt="Mukesh Thakur Logo" 
                         style="height: 125px; width: 125px; border-radius: 50%; object-fit: cover; border: 2px solid var(--cyan); box-shadow: 0 0 10px rgba(0, 245, 255, 0.3);" />
                    <span>Mukesh Thakur</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(action == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About" style="font-family: 'JetBrains Mono', monospace; text-transform: uppercase; letter-spacing: 1px;">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action == "Education" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Education" style="font-family: 'JetBrains Mono', monospace; text-transform: uppercase; letter-spacing: 1px;">EDUCATION</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action == "Skills" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Skills" style="font-family: 'JetBrains Mono', monospace; text-transform: uppercase; letter-spacing: 1px;">SKILLS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action == "Index" && controller == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'JetBrains Mono', monospace; text-transform: uppercase; letter-spacing: 1px;">PROJECTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/mukeshrama" target="_blank" style="font-family: 'JetBrains Mono', monospace; text-transform: uppercase; letter-spacing: 1px; color: var(--cyan);">
                                <svg width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16" style="vertical-align: text-bottom;">
                                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                                </svg>
                                GITHUB
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action == "Contact" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact" style="font-family: 'JetBrains Mono', monospace; text-transform: uppercase; letter-spacing: 1px;">CONTACT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top text-muted py-4 mt-5" style="background: rgba(10, 10, 10, 0.8); border-color: var(--border-color) !important;">
        <div class="container text-center">
            <p class="mb-2" style="font-family: 'JetBrains Mono', monospace; color: var(--text-secondary);">
                &copy; 2026 Mukesh Thakur - Full Stack .NET Developer
            </p>
            <p class="small" style="color: var(--cyan); font-family: 'JetBrains Mono', monospace;">
                // Built with ASP.NET Core & passion for code
            </p>
        </div>
    </footer>

    <!-- Chat Bot Widget -->
    <div id="chatbot-container" style="display: none;">
        <div id="chatbot-header">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="width: 10px; height: 10px; background: #00f5ff; border-radius: 50%; animation: pulse 2s infinite;"></div>
                <span style="font-family: 'JetBrains Mono', monospace; font-weight: 600;">AI Assistant</span>
            </div>
            <button id="close-chat" type="button" style="background: none; border: none; color: white; font-size: 1.8rem; cursor: pointer; padding: 0 0.5rem; line-height: 1; transition: all 0.2s ease; opacity: 0.8;">&times;</button>
        </div>
        <div id="chatbot-messages">
            <div class="bot-message">
                <div class="message-avatar">🤖</div>
                <div class="message-content">
                    Hi! I'm Mukesh's AI assistant. How can I help you today?
                    <div class="quick-replies" style="margin-top: 0.75rem;">
                        <button class="quick-reply" data-message="Tell me about Mukesh">About Me</button>
                        <button class="quick-reply" data-message="What are your skills?">Skills</button>
                        <button class="quick-reply" data-message="Show me your projects">Projects</button>
                        <button class="quick-reply" data-message="How can I contact you?">Contact</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="chatbot-input-area">
            <input type="text" id="chatbot-input" placeholder="Type your message..." />
            <button id="send-message">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/>
                </svg>
            </button>
        </div>
    </div>

    <!-- Chat Bot Toggle Button -->
    <button id="chatbot-toggle" aria-label="Open chat">
        <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
            <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
        </svg>
    </button>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
