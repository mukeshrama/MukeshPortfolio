@model MukeshPortfolio.Models.AboutViewModel
@{
    ViewData["Title"] = "About - Mukesh Thakur";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 60vh;">
    <div class="hero-content">
        
        <div class="code-comment mb-4">
            // About Me
        </div>

        <h1>
            <span class="gradient-text">Mukesh Thakur</span>
        </h1>

        <h2 class="h3 text-white mb-4" style="font-weight: 300;">
            @Model.Profile.Role
        </h2>

        <p class="tagline" style="max-width: 900px; margin: 0 auto;">
            @Model.Profile.Summary
        </p>

        <div class="cta-buttons mt-4">
            <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-cta btn-cta-primary">
                Get In Touch
            </a>
            <a href="@Model.Profile.LinkedInUrl" target="_blank" class="btn btn-cta btn-cta-secondary">
                LinkedIn Profile
            </a>
        </div>

    </div>
</section>

<!-- Work Experience Section -->
<section id="experience" class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <div class="code-comment mb-3">
                // Professional Journey
            </div>
            <h2 class="display-4 fw-bold mb-3">
                <span class="gradient-text">Work Experience</span>
            </h2>
            <p class="text-muted">3+ years of professional experience</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">
            
            @foreach (var exp in Model.WorkExperience)
            {
                <div class="experience-card mb-4" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2rem; position: relative; overflow: hidden;">
                    
                    <!-- Top Border Accent -->
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--primary-gradient);"></div>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="h4 fw-bold mb-2" style="color: var(--text-primary);">
                                @exp.Position
                            </h3>
                            <h4 class="h5 mb-3" style="color: var(--text-accent);">
                                @exp.Company
                            </h4>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="mb-2">
                                @if (exp.IsCurrentRole)
                                {
                                    <span class="badge bg-primary px-3 py-2">Current</span>
                                }
                            </div>
                            <p class="text-muted small mb-1">
                                <svg width="14" height="14" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                                </svg>
                                @exp.Duration
                            </p>
                            <p class="text-muted small">
                                <svg width="14" height="14" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                                </svg>
                                @exp.Location
                            </p>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h5 class="h6 fw-bold mb-3" style="color: var(--text-secondary); text-transform: uppercase; letter-spacing: 1px; font-size: 0.85rem;">
                            Key Responsibilities
                        </h5>
                        <ul class="list-unstyled" style="color: var(--text-secondary);">
                            @foreach (var responsibility in exp.Responsibilities)
                            {
                                <li class="mb-2" style="padding-left: 1.5rem; position: relative;">
                                    <span style="position: absolute; left: 0; color: var(--cyan);">â–¹</span>
                                    @responsibility
                                </li>
                            }
                        </ul>
                    </div>

                    @if (exp.Technologies?.Any() == true)
                    {
                        <div class="mt-4">
                            <h5 class="h6 fw-bold mb-3" style="color: var(--text-secondary); text-transform: uppercase; letter-spacing: 1px; font-size: 0.85rem;">
                                Technologies Used
                            </h5>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tech in exp.Technologies)
                                {
                                    <span class="badge" style="background: rgba(0, 245, 255, 0.1); border: 1px solid var(--border-color); color: var(--cyan); padding: 0.5rem 1rem;">
                                        @tech
                                    </span>
                                }
                            </div>
                        </div>
                    }
                    
                </div>
            }

        </div>
    </div>
</section>

<!-- Education Section -->
<section id="education" class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <div class="code-comment mb-3">
                // Academic Background
            </div>
            <h2 class="display-4 fw-bold mb-3">
                <span class="gradient-text">Education</span>
            </h2>
            <p class="text-muted">My academic qualifications and achievements</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">

            @foreach (var edu in Model.Education)
            {
                <div class="experience-card mb-4" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2rem; position: relative; overflow: hidden;">

                    <!-- Top Border Accent -->
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--accent-gradient);"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="h4 fw-bold mb-2" style="color: var(--text-primary);">
                                @edu.Degree
                            </h3>
                            @if (!string.IsNullOrEmpty(edu.Specialization))
                            {
                                <h4 class="h6 mb-2" style="color: var(--text-secondary);">
                                    @edu.Specialization
                                </h4>
                            }
                            <h4 class="h5 mb-3" style="color: var(--text-accent);">
                                @edu.Institution
                            </h4>
                        </div>
                        <div class="col-md-4 text-md-end">
                            @if (edu.IsCurrentlyStudying)
                            {
                                <span class="badge bg-primary px-3 py-2 mb-2">Currently Studying</span>
                            }
                            <p class="text-muted small mb-1">
                                <svg width="14" height="14" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                                </svg>
                                @edu.Duration
                            </p>
                            <p class="text-muted small">
                                <svg width="14" height="14" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                                </svg>
                                @edu.Location
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(edu.Grade))
                    {
                        <div class="mt-3">
                            <span style="background: rgba(0, 245, 255, 0.1); border: 1px solid var(--border-color); color: var(--cyan); padding: 0.5rem 1rem; border-radius: 8px; display: inline-block;">
                                <strong>Grade:</strong> @edu.Grade
                            </span>
                        </div>
                    }

                </div>
            }

        </div>
    </div>
</section>

<!-- Skills Section -->
<section id="skills" class="container py-5 mb-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <div class="code-comment mb-3">
                // Technical Arsenal
            </div>
            <h2 class="display-4 fw-bold mb-3">
                <span class="gradient-text">Skills & Technologies</span>
            </h2>
            <p class="text-muted">Technologies and tools I work with</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2.5rem;">
                <div class="d-flex flex-wrap gap-3 justify-content-center">
                    @foreach (var skill in Model.Skills)
                    {
                        <div class="skill-badge" style="background: rgba(0, 245, 255, 0.05); border: 2px solid var(--border-color); border-radius: 12px; padding: 1rem 1.5rem; transition: all 0.3s ease; cursor: default;">
                            <span style="color: var(--text-primary); font-weight: 600; font-family: 'JetBrains Mono', monospace; font-size: 0.9rem;">
                                @skill
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .experience-card {
        transition: all 0.3s ease;
    }

    .experience-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
        border-color: var(--cyan) !important;
    }

    .skill-badge:hover {
        transform: translateY(-3px);
        background: rgba(0, 245, 255, 0.1) !important;
        border-color: var(--cyan) !important;
        box-shadow: 0 0 20px rgba(0, 245, 255, 0.3);
    }
</style>
