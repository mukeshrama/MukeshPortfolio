@model MukeshPortfolio.Models.SkillsViewModel
@{
    ViewData["Title"] = "Skills - Mukesh Thakur";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 50vh;">
    <div class="hero-content">
        
        <div class="code-comment mb-4">
            // Technical Arsenal
        </div>

        <h1>
            <span class="gradient-text">Skills & Expertise</span>
        </h1>

        <p class="tagline" style="max-width: 800px; margin: 0 auto;">
            A comprehensive overview of technologies, frameworks, and methodologies<br/>
            I've mastered throughout my professional journey.
        </p>

    </div>
</section>

<!-- Skills Categories Section -->
<section class="container py-5 mb-5">
    
    <!-- Stats Overview -->
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="stat-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2rem; text-align: center; position: relative; overflow: hidden;">
                <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--primary-gradient);"></div>
                <div style="font-size: 3rem; font-weight: 800; background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    @Model.Skills.Length+
                </div>
                <div style="color: var(--text-secondary); text-transform: uppercase; letter-spacing: 2px; font-size: 0.85rem; font-family: 'JetBrains Mono', monospace;">
                    Total Skills
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="stat-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2rem; text-align: center; position: relative; overflow: hidden;">
                <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--accent-gradient);"></div>
                <div style="font-size: 3rem; font-weight: 800; background: var(--accent-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    @Model.SkillCategories.Count
                </div>
                <div style="color: var(--text-secondary); text-transform: uppercase; letter-spacing: 2px; font-size: 0.85rem; font-family: 'JetBrains Mono', monospace;">
                    Categories
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="stat-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2rem; text-align: center; position: relative; overflow: hidden;">
                <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: linear-gradient(90deg, #00f5ff 0%, #a855f7 100%);"></div>
                <div style="font-size: 3rem; font-weight: 800; color: var(--cyan);">
                    3+
                </div>
                <div style="color: var(--text-secondary); text-transform: uppercase; letter-spacing: 2px; font-size: 0.85rem; font-family: 'JetBrains Mono', monospace;">
                    Years Experience
                </div>
            </div>
        </div>
    </div>

    <!-- Skill Categories Grid -->
    <div class="row g-4">
        @foreach (var category in Model.SkillCategories)
        {
            <div class="col-lg-6 mb-4">
                <div class="skill-category-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2rem; height: 100%; position: relative; overflow: hidden; transition: all 0.3s ease;">
                    
                    <!-- Top Accent Line -->
                    <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--primary-gradient); transform: scaleX(0); transform-origin: left; transition: transform 0.4s ease;"></div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div style="width: 40px; height: 40px; background: rgba(0, 245, 255, 0.1); border: 2px solid var(--border-color); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
                            <svg width="20" height="20" fill="var(--cyan)" viewBox="0 0 16 16">
                                <path d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                            </svg>
                        </div>
                        <h3 class="h5 mb-0 fw-bold" style="color: var(--text-primary); font-family: 'JetBrains Mono', monospace; letter-spacing: 1px;">
                            @category.Key
                        </h3>
                    </div>

                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var skill in category.Value)
                        {
                            <div class="skill-tag" style="background: rgba(0, 245, 255, 0.05); border: 2px solid var(--border-color); border-radius: 8px; padding: 0.6rem 1rem; transition: all 0.3s ease; cursor: default;">
                                <span style="color: var(--text-primary); font-weight: 500; font-size: 0.9rem;">
                                    @skill
                                </span>
                            </div>
                        }
                    </div>

                    <div class="mt-3 pt-3" style="border-top: 1px solid var(--border-color);">
                        <span style="color: var(--text-secondary); font-size: 0.85rem; font-family: 'JetBrains Mono', monospace;">
                            @category.Value.Length skills
                        </span>
                    </div>

                </div>
            </div>
        }
    </div>

    <!-- All Skills Cloud -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="text-center mb-4">
                <div class="code-comment mb-3">
                    // Complete Tech Stack
                </div>
                <h2 class="h3 fw-bold">
                    <span class="gradient-text">All Technologies</span>
                </h2>
            </div>
            
            <div style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 3rem;">
                <div class="d-flex flex-wrap gap-3 justify-content-center">
                    @foreach (var skill in Model.Skills)
                    {
                        <div class="skill-cloud-item" style="background: rgba(0, 245, 255, 0.05); border: 2px solid var(--border-color); border-radius: 12px; padding: 0.8rem 1.5rem; transition: all 0.3s ease; cursor: default;">
                            <span style="color: var(--text-primary); font-weight: 600; font-family: 'JetBrains Mono', monospace; font-size: 0.95rem;">
                                @skill
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>

<style>
    .stat-card {
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
    }

    .skill-category-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
        border-color: var(--cyan) !important;
    }

    .skill-category-card:hover > div:first-child {
        transform: scaleX(1);
    }

    .skill-tag:hover {
        transform: translateY(-2px);
        background: rgba(0, 245, 255, 0.1) !important;
        border-color: var(--cyan) !important;
        box-shadow: 0 0 15px rgba(0, 245, 255, 0.3);
    }

    .skill-cloud-item:hover {
        transform: scale(1.1) translateY(-3px);
        background: rgba(0, 245, 255, 0.1) !important;
        border-color: var(--cyan) !important;
        box-shadow: 0 0 20px rgba(0, 245, 255, 0.4);
    }
</style>
