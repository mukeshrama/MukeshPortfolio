@model MukeshPortfolio.Models.Profile
@{
    ViewData["Title"] = "Contact - Mukesh Thakur";
}

<!-- Hero Section -->
<section class="hero" style="min-height: 50vh;">
    <div class="hero-content">
        
        <div class="code-comment mb-4">
            // Get In Touch
        </div>

        <h1>
            <span class="gradient-text">Contact Me</span>
        </h1>

        <p class="tagline" style="max-width: 800px; margin: 0 auto;">
            Have a project in mind or want to discuss opportunities?<br/>
            Feel free to reach out through any of the channels below.
        </p>

    </div>
</section>

<!-- Contact Info Section -->
<section class="container py-5">
    
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <!-- Contact Cards Grid -->
            <div class="row g-4 mb-5">
                
                <!-- Email Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="contact-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2.5rem; text-align: center; height: 100%; position: relative; overflow: hidden; transition: all 0.3s ease;">
                        <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--primary-gradient);"></div>
                        
                        <div style="width: 80px; height: 80px; background: rgba(0, 245, 255, 0.1); border: 2px solid var(--border-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                            <svg width="36" height="36" fill="var(--cyan)" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                            </svg>
                        </div>

                        <h3 class="h5 fw-bold mb-2" style="color: var(--text-primary); font-family: 'JetBrains Mono', monospace;">Email</h3>
                        <p class="text-muted small mb-3">Drop me a line anytime</p>
                        <a href="mailto:@Model.Email" style="color: var(--cyan); font-size: 0.95rem; text-decoration: none; word-break: break-all;">
                            @Model.Email
                        </a>
                    </div>
                </div>

                <!-- Phone Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="contact-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2.5rem; text-align: center; height: 100%; position: relative; overflow: hidden; transition: all 0.3s ease;">
                        <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: var(--accent-gradient);"></div>
                        
                        <div style="width: 80px; height: 80px; background: rgba(0, 245, 255, 0.1); border: 2px solid var(--border-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                            <svg width="36" height="36" fill="var(--cyan)" viewBox="0 0 16 16">
                                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                            </svg>
                        </div>

                        <h3 class="h5 fw-bold mb-2" style="color: var(--text-primary); font-family: 'JetBrains Mono', monospace;">Phone</h3>
                        <p class="text-muted small mb-3">Call me for urgent matters</p>
                        <a href="tel:@Model.Phone" style="color: var(--cyan); font-size: 0.95rem; text-decoration: none;">
                            @Model.Phone
                        </a>
                    </div>
                </div>

                <!-- Location Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="contact-card" style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 2.5rem; text-align: center; height: 100%; position: relative; overflow: hidden; transition: all 0.3s ease;">
                        <div style="position: absolute; top: 0; left: 0; right: 0; height: 3px; background: linear-gradient(90deg, #00f5ff 0%, #a855f7 100%);"></div>
                        
                        <div style="width: 80px; height: 80px; background: rgba(0, 245, 255, 0.1); border: 2px solid var(--border-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                            <svg width="36" height="36" fill="var(--cyan)" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                            </svg>
                        </div>

                        <h3 class="h5 fw-bold mb-2" style="color: var(--text-primary); font-family: 'JetBrains Mono', monospace;">Location</h3>
                        <p class="text-muted small mb-3">Based in</p>
                        <p style="color: var(--cyan); font-size: 0.95rem; margin: 0;">
                            @Model.Location
                        </p>
                    </div>
                </div>

            </div>

            <!-- Social Links Section -->
            <div class="row">
                <div class="col-12">
                    <div style="background: var(--card-bg); border: 1px solid var(--border-color); border-radius: 16px; padding: 3rem; text-align: center;">
                        
                        <div class="code-comment mb-3">
                            // Connect With Me
                        </div>

                        <h2 class="h3 fw-bold mb-4">
                            <span class="gradient-text">Social Networks</span>
                        </h2>

                        <p class="text-muted mb-4">
                            Let's connect on professional networks and collaborate
                        </p>

                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            
                            <!-- LinkedIn -->
                            <a href="@Model.LinkedInUrl" target="_blank" class="social-link" style="background: rgba(0, 245, 255, 0.05); border: 2px solid var(--border-color); border-radius: 12px; padding: 1.5rem 2rem; transition: all 0.3s ease; text-decoration: none; display: flex; align-items: center; gap: 1rem;">
                                <svg width="32" height="32" fill="var(--cyan)" viewBox="0 0 16 16">
                                    <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                                </svg>
                                <div style="text-align: left;">
                                    <div style="color: var(--text-primary); font-weight: 600; font-family: 'JetBrains Mono', monospace;">LinkedIn</div>
                                    <div style="color: var(--text-secondary); font-size: 0.85rem;">Professional Network</div>
                                </div>
                            </a>

                            <!-- GitHub -->
                            <a href="@Model.GithubUrl" target="_blank" class="social-link" style="background: rgba(0, 245, 255, 0.05); border: 2px solid var(--border-color); border-radius: 12px; padding: 1.5rem 2rem; transition: all 0.3s ease; text-decoration: none; display: flex; align-items: center; gap: 1rem;">
                                <svg width="32" height="32" fill="var(--cyan)" viewBox="0 0 16 16">
                                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                                </svg>
                                <div style="text-align: left;">
                                    <div style="color: var(--text-primary); font-weight: 600; font-family: 'JetBrains Mono', monospace;">GitHub</div>
                                    <div style="color: var(--text-secondary); font-size: 0.85rem;">Code Repository</div>
                                </div>
                            </a>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</section>

<style>
    .contact-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
        border-color: var(--cyan) !important;
    }

    .contact-card a:hover {
        text-decoration: underline !important;
    }

    .social-link:hover {
        transform: translateY(-5px);
        background: rgba(0, 245, 255, 0.1) !important;
        border-color: var(--cyan) !important;
        box-shadow: 0 0 30px rgba(0, 245, 255, 0.4);
    }
</style>
